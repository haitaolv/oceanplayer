<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <!--绘制 圆形-->
        <shape
            android:shape="oval">
            <!--描边 白色 宽度1px-->
            <stroke android:color="#888888"
                android:width="2px"/>
            <size android:width= "24dp"
                android:height= "24dp" />
        </shape>
    </item>
    <item
        android:left="4dp"
        android:right="4dp"
        android:top="4dp"
        android:bottom="4dp"
        android:drawable="@android:drawable/ic_media_pause">
    </item>
</layer-list>